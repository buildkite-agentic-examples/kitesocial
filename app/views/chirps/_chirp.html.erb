<%= turbo_frame_tag dom_id(chirp) do %>
  <p>
    <%= chirp_body(chirp) %><br>
    -- <%= user_link(chirp.author) %>, <time title="<%= chirp.created_at.to_s %>" datetime="<%= chirp.created_at.rfc3339 %>"><%= time(chirp.created_at) %></time>
    <% if current_user == chirp.author %>
      <%= link_to "Delete", chirp_path(chirp), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:underline text-sm ml-2" %>
    <% end %>
  </p>
<% end %>
